{
    "version": "1.2.0",
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2020",
        "strict": true,
        "outDir": "./target",
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "lib": ["es2020"],
        "pretty": true,
        "removeComments": true,
        "incremental": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext"
    },
    "include": ["src/*.ts"]
}
